EJERCICIO 1
#include <stdio.h>
#include <time.h>
#ifdef _WIN32
#include <windows.h>
#else
#include <unistd.h>
#endif

int main() {
    while (1) {
        time_t t = time(NULL);
        struct tm *tmv = localtime(&t);
        if (!tmv) return 1;
        int hh = tmv->tm_hour;
        int mm = tmv->tm_min;
        int ss = tmv->tm_sec;
        printf("\r%02d:%02d:%02d", hh, mm, ss);
        fflush(stdout);
#ifdef _WIN32
        Sleep(1000);
#else
        sleep(1);
#endif
    }
    return 0;
}

EJERCICIO 2

#include <stdio.h>

int main() {
    long long N;
    printf("Ingrese N: ");
    if (scanf("%lld", &N) != 1) return 1;
    if (N < 1) {
        printf("N debe ser >= 1\n");
        return 0;
    }
    long long S = N * (N + 1) / 2;
    printf("S = %lld\n", S);
    return 0;
}

EJERCICIO 3

#include <stdio.h>
#include <math.h>

int main() {
    double X;
    int n;
    printf("Ingrese X (real) y n (impar, >=1): ");
    if (scanf("%lf %d", &X, &n) != 2) return 1;
    if (n < 1 || n % 2 == 0) { printf("n debe ser impar y >=1\n"); return 0; }

    double S = 0.0;
    double fact = 1.0;
    for (int k = 1; k <= n; k += 2) {
        fact = 1.0;
        for (int t = 1; t <= k; ++t) fact *= t;
        double term = pow(X, k) / fact;
        if (((k - 1) / 2) % 2 == 1) S -= term;
        else S += term;
    }
    printf("S = %.10g\n", S);
    return 0;
}

EJERCICIO 4

#include <stdio.h>

long long gcd(long long a, long long b) {
    if (a < 0) a = -a;
    if (b < 0) b = -b;
    while (b != 0) {
        long long r = a % b;
        a = b;
        b = r;
    }
    return a;
}

int main() {
    long long a, b;
    printf("Ingrese dos enteros: ");
    if (scanf("%lld %lld", &a, &b) != 2) return 1;
    if (a == 0 && b == 0) {
        printf("MCD indefinido (ambos 0)\n");
        return 0;
    }
    printf("MCD(%lld, %lld) = %lld\n", a, b, gcd(a, b));
    return 0;
}

EJERCICIO 5 

#include <stdio.h>
#include <stdlib.h>

long long gcd_ll(long long a, long long b) {
    if (a < 0) a = -a; if (b < 0) b = -b;
    while (b) { long long r = a % b; a = b; b = r; }
    return a;
}

int main() {
    long long a, b;
    printf("Ingrese dos enteros: ");
    if (scanf("%lld %lld", &a, &b) != 2) return 1;
    if (a == 0 || b == 0) { printf("Si uno es 0, el MCM es 0\n"); return 0; }
    long long g = gcd_ll(a, b);
    long long l = llabs((a / g) * b); 
    printf("MCM(%lld, %lld) = %lld\n", a, b, l);
    return 0;
}

EJERCICIO 6

#include <stdio.h>

int main() {
    printf("   |");
    for (int j = 1; j <= 10; ++j) printf("%4d", j);
    printf("\n----+--------------------------------\n");
    for (int i = 1; i <= 10; ++i) {
        printf("%2d |", i);
        for (int j = 1; j <= 10; ++j) {
            printf("%4d", i + j);
        }
        printf("\n");
    }
    return 0;
}

EJERCICIO 7

#include <stdio.h>

int main() {
    int n;
    printf("Ingrese n (>=0): ");
    if (scanf("%d", &n) != 1) return 1;
    if (n < 0) { printf("n debe ser >=0\n"); return 0; }

    unsigned long long a = 1, b = 1;
    if (n == 0) { printf("F0 = 1\n"); return 0; }
    if (n == 1) { printf("F1 = 1\n"); return 0; }

    for (int i = 2; i <= n; ++i) {
        unsigned long long c = a + b;
        a = b;
        b = c;
    }
    printf("F%d = %llu\n", n, b);
    return 0;
}

EJERCICIP 8

#include <stdio.h>
#include <math.h>

int esPrimo(long long n) {
    if (n <= 1) return 0;
    if (n <= 3) return 1;
    if (n % 2 == 0) return 0;
    long long r = (long long)sqrt((double)n);
    for (long long i = 3; i <= r; i += 2)
        if (n % i == 0) return 0;
    return 1;
}

int main() {
    long long N;
    printf("Ingrese N: ");
    if (scanf("%lld", &N) != 1) return 1;
    if (esPrimo(N)) printf("%lld es primo\n", N);
    else printf("%lld no es primo\n", N);
    return 0;
}

EJERCICIO 9

#include <stdio.h>

int main() {
    long long N;
    printf("Ingrese N: ");
    if (scanf("%lld", &N) != 1) return 1;
    if (N < 1) {
        printf("N debe ser >= 1\n");
        return 0;
    }
  
    long long k = (N + 1) / 2;
    long long S = k * k;
    printf("Suma de impares = %lld\n", S);
    return 0;
}

EJERCICIO 1O

#include <stdio.h>

int main() {
    long long N;
    printf("Ingrese N: ");
    if (scanf("%lld", &N) != 1) return 1;
    if (N < 1) {
        printf("N debe ser >= 1\n");
        return 0;
    }

    long long S = N * (N + 1) * (2 * N + 1) / 6;
    printf("Suma de cuadrados = %lld\n", S);
    return 0;
}

EJERCICIO 11

#include <stdio.h>

int main() {
    long long N;
    printf("Ingrese N: ");
    if (scanf("%lld", &N) != 1) return 1;
    long long S = 0;
    int sign = 1;
    for (long long i = 1; i <= N; ++i) {
        if (i % 2 == 1) S += i; else S -= i;
    }
    printf("S = %lld\n", S);
    return 0;
}

EJERCICIO NUMERO 12

#include <stdio.h>

int main() {
    unsigned long long N;
    printf("Ingrese N (<=20 recomendado por overflow): ");
    if (scanf("%llu", &N) != 1) return 1;
    if (N == 0) {
        printf("Producto vacio (se interpreta como 1)\nP = 1\n");
        return 0;
    }
    unsigned long long P = 1;
    for (unsigned long long i = 1; i <= N; ++i) P *= i;
    printf("P = %llu\n", P);
    return 0;
}

EJERCICIO 13

#include <stdio.h>
#include <math.h>

int main() {
    double x;
    int n;
    printf("Ingrese X (real) y n (entero >=1): ");
    if (scanf("%lf %d", &x, &n) != 2) return 1;
    if (n < 1) { printf("n debe ser >= 1\n"); return 0; }

    double S = 0.0;

    if (fabs(x - 1.0) < 1e-15) {
        S = (double)n;
    } else {
        
        double term = x;
        for (int i = 1; i <= n; ++i) {
            S += term;
            term *= x;
        }
    }
    printf("S = %.10g\n", S);
    return 0;
}

EJERCICI mi 14

#include <stdio.h>
#include <math.h>

int main() {
    double X;
    int n;
    printf("Ingrese X (real) y n (entero >=1): ");
    if (scanf("%lf %d", &X, &n) != 2) return 1;
    if (n < 1) { printf("n debe ser >=1\n"); return 0; }

    double S = 0.0;
    double fact = 1.0;
    for (int i = 1; i <= n; ++i) {
        fact *= i;
        double term = pow(X, i) / fact;
        if (i % 2 == 0) S -= term; else S += term;
    }
    printf("S = %.10g\n", S);
    return 0;
}

EJERCICIO NUMERO 15

#include <stdio.h>
#include <math.h>

int main() {
    double X;
    int n;
    printf("Ingrese X (real) y n (entero >=1): ");
    if (scanf("%lf %d", &X, &n) != 2) return 1;
    if (n < 1) { printf("n debe ser >=1\n"); return 0; }

    double S = 0.0;
    double fact = 1.0;
    for (int i = 1; i <= n; ++i) {
        fact *= i;
        double term = pow(X, i) / fact;
        if (i % 2 == 0) S -= term; else S += term;
    }
    printf("S = %.10g\n", S);
    return 0;
}

