ejercicio 1

#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main() {
    string cad;
    getline(cin, cad);

    transform(cad.begin(), cad.end(), cad.begin(), ::toupper);

    cout << cad;
    return 0;
}

ejercicio 2 

#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int main() {
    string cad;
    getline(cin, cad);

    string palabra;
    int cont = 0;
    stringstream ss(cad);

    while (ss >> palabra) cont++;

    cout << cont << " palabras";
    return 0;
}


ejercicio 3

#include <iostream>
#include <string>
using namespace std;

int main() {
    string cad;
    getline(cin, cad);

    bool inicio = true;

    for (char &c : cad) {
        if (inicio && isalpha(c)) {
            c = toupper(c);
            inicio = false;
        } else if (c == ' ')
            inicio = true;
    }

    cout << cad;
    return 0;
}


