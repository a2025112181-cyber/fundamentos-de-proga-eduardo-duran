ejercicio 6

#include <iostream>
#include <string>
using namespace std;

bool esVocal(char c) {
    c = tolower(c);
    return (c=='a'||c=='e'||c=='i'||c=='o'||c=='u');
}

int main() {
    string cad;
    getline(cin, cad);

    string res = "";
    for (char c : cad)
        if (!esVocal(c)) res += c;

    cout << res;
    return 0;
}


