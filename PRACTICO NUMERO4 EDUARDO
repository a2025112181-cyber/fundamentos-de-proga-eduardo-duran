EJERCICIO 1
#include <stdio.h>

int main() {
    int N, suma = 0, digito;

    printf("Ingrese un numero entero: ");
    scanf("%d", &N);

    int temp = N;
    while (temp > 0) {
        digito = temp % 10;
        suma += digito;
        temp /= 10;
    }

    printf("La suma de los digitos de %d es: %d\n", N, suma);
    return 0;
}

EJERCICIO 2

#include <stdio.h>

int main() {
    int N, Z = 0;

    printf("Ingrese un numero entero: ");
    scanf("%d", &N);

    int temp = N;
    while (temp > 0) {
        Z = Z * 10 + temp % 10;
        temp /= 10;
    }

    printf("El numero invertido de %d es: %d\n", N, Z);
    return 0;
}

EJERCICIO 3

#include <stdio.h>

int main() {
    int N, digito, contador = 0;

    printf("Ingrese un numero entero: ");
    scanf("%d", &N);

    int temp = N;
    while (temp > 0) {
        digito = temp % 10;
        if (digito % 2 == 0) contador++;
        temp /= 10;
    }

    printf("El numero %d tiene %d digitos pares.\n", N, contador);
    return 0;
}

EJERCICIO 4 

#include <stdio.h>

int main() {
    int N, invertido = 0, temp;

    printf("Ingrese un numero entero: ");
    scanf("%d", &N);

    temp = N;
    while (temp > 0) {
        invertido = invertido * 10 + temp % 10;
        temp /= 10;
    }

    if (invertido == N)
        printf("El numero %d es capicua.\n", N);
    else
        printf("El numero %d NO es capicua.\n", N);

    return 0;
}

EJERCICIO 5

#include <stdio.h>

int main() {
    long N, digito, resultado = 0, pos = 1;

    printf("Ingrese un numero entero: ");
    scanf("%ld", &N);

    long temp = N;
    while (temp > 0) {
        digito = temp % 10;
        resultado += (9 - digito) * pos;
        pos *= 10;
        temp /= 10;
    }

    printf("El complemento a 9 de %ld es: %ld\n", N, resultado);
    return 0;
}

EJERCICIO 6

#include <stdio.h>

int main() {
    long N;
    int digito, invalido = 0;

    printf("Ingrese un numero en base 8: ");
    scanf("%ld", &N);

    long temp = N;
    while (temp > 0) {
        digito = temp % 10;
        if (digito > 7) {
            invalido = 1;
            break;
        }
        temp /= 10;
    }

    if (invalido)
        printf("El numero %ld NO corresponde a la base 8.\n", N);
    else
        printf("El numero %ld es valido en base 8.\n", N);

    return 0;
}

