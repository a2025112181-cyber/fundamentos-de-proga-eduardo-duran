EJERCICIO 1 

#include <stdio.h>

int main() {
    double P;
    printf("Ingrese el peso de la carta en gramos: ");
    if (scanf("%lf", &P) != 1) return 1;

    if (P > 0 && P < 50) {
        printf("Costo: Bs. 1.50\n");
    } else if (P >= 50 && P <= 100) {
        printf("Costo: Bs. 4.00\n");
    } else if (P > 100 && P <= 200) {
        printf("Costo: Bs. 6.00\n");
    } else if (P > 200 && P <= 350) {
        printf("Costo: Bs. 10.50\n");
    } else if (P > 350 && P <= 500) {
        printf("Costo: Bs. 15.00\n");
    } else if (P > 500) {
        printf("NO PUEDE ENVIAR COMO CARTA\n");
    } else {
        printf("Peso no valido (debe ser > 0)\n");
    }
    return 0;
}

EJERCICIO 2

#include <stdio.h>
#include <math.h>
 int main () {

     double a,b,c,x1,x2;

     printf("Ingrese el termino cuadratico:");
     scanf("%lf,",&a);
     printf("Ingrese el termino lineal:");
     scanf("%lf",&b);
     printf("Ingrese el termino independiente:");
     scanf("%lf",&c);

     if (b*b-4*a*c >= 0) {
        x1=(-b+sqrt(b*b-4*a*c))/(2*a);
        x2=(-b-sqrt(b*b-4*a*c))/(2*a);
        printf("Las soluciones son x1=%lf y x2=%lf\n",x1,x2);
     }
        else {
                printf("La ecuacion no tiene soluciones reales.\n");

        }
        return 0;
 }

EJERCICIO 4

#include <stdio.h>

int main() {
    int h1, m1, s1, h2, m2, s2;
    printf("Ingrese primer horario (HH MM SS): ");
    if (scanf("%d %d %d", &h1, &m1, &s1) != 3) return 1;
    printf("Ingrese segundo horario (HH MM SS): ");
    if (scanf("%d %d %d", &h2, &m2, &s2) != 3) return 1;

    int t1 = h1*3600 + m1*60 + s1;
    int t2 = h2*3600 + m2*60 + s2;

    if (t2 < t1) {
        printf("Error: el primer horario debe ser antes que el segundo (mismo dia).\n");
        return 0;
    }

    int diff = t2 - t1;
    int hd = diff / 3600;
    diff %= 3600;
    int md = diff / 60;
    int sd = diff % 60;

    printf("Tiempo transcurrido: %d:%02d:%02d\n", hd, md, sd);
    return 0;

EJERCICIO 6

#include <stdio.h>
#include <math.h>

int main() {
    double a, b, c;
    printf("Ingrese a b c: ");
    if (scanf("%lf %lf %lf", &a, &b, &c) != 3) return 1;

    if (a == 0) {
    
        if (b == 0) {
            if (c == 0) printf("Infinitas soluciones (0 = 0)\n");
            else printf("No tiene solucion (contradiccion: %.2f = 0)\n", c);
        } else {
            double x = -c / b;
            printf("Ecuacion lineal. Una solucion: x = %.6f\n", x);
        }
        return 0;
    }

    double D = b*b - 4*a*c;
    if (D > 0) {
        double x1 = (-b + sqrt(D)) / (2*a);
        double x2 = (-b - sqrt(D)) / (2*a);
        printf("Dos raices reales: x1 = %.6f, x2 = %.6f\n", x1, x2);
    } else if (D == 0) {
        double x = -b / (2*a);
        printf("Raiz doble real: x = %.6f\n", x);
    } else {
    
        double real = -b / (2*a);
        double imag = sqrt(-D) / (2*a);
        printf("Raices complejas:\n");
        printf("x1 = %.6f + %.6fi\n", real, imag);
        printf("x2 = %.6f - %.6fi\n", real, imag);
    }
    return 0;
}
