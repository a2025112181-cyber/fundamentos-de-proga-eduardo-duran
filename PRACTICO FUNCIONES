EJERCICIO 13

#include <iostream>
#include <cmath>
using namespace std;

double REDONDEAR(double r, int n) {
    double f = pow(10, n);
    return round(r * f) / f;
}

int main() {
    double r; int n;
    cout << "Ingrese numero y decimales: ";
    cin >> r >> n;
    cout << "Redondeado: " << REDONDEAR(r, n) << endl;
    return 0;
}

EJERCICIO 12

#include <iostream>
using namespace std;

bool bisiesto(int a) {
    return (a%4==0 && a%100!=0) || (a%400==0);
}

bool validar(int d, int m, int a) {
    int dias[] = {0,31,28,31,30,31,30,31,31,30,31,30,31};
    if (bisiesto(a)) dias[2] = 29;
    return m>=1 && m<=12 && d>=1 && d<=dias[m];
}

int main() {
    int d,m,a;
    cout << "Ingrese dia, mes, año: ";
    cin >> d >> m >> a;
    if (validar(d,m,a)) cout << "Fecha valida" << endl;
    else cout << "Fecha invalida" << endl;
    return 0;
}

EJERCICIO 11

#include <iostream>
#include <string>
using namespace std;

string UNIDADES[] = {"","uno","dos","tres","cuatro","cinco","seis","siete","ocho","nueve"};
string DECENAS[] = {"","diez","veinte","treinta","cuarenta","cincuenta","sesenta","setenta","ochenta","noventa"};

string literal(int n) {
    if (n == 0) return "cero";
    if (n < 10) return UNIDADES[n];
    if (n < 100) return DECENAS[n/10] + (n%10 ? " y " + UNIDADES[n%10] : "");
    if (n < 1000) return UNIDADES[n/100] + "cientos " + literal(n%100);
    if (n < 2000) return "mil " + literal(n%1000);
    return "numero grande";
}

int main() {
    double r;
    cout << "Ingrese un monto en Bs: ";
    cin >> r;
    int ent = (int)r;
    int dec = (r - ent) * 100;
    cout << "Literal: " << literal(ent) << " " << dec << "/100 bolivianos" << endl;
    return 0;
}

EJERCICIO 10

#include <iostream>
#include <string>
using namespace std;

string UNIDADES[] = {"","uno","dos","tres","cuatro","cinco","seis","siete","ocho","nueve"};
string DECENAS[] = {"","diez","veinte","treinta","cuarenta","cincuenta","sesenta","setenta","ochenta","noventa"};

string literal(int n) {
    if (n == 0) return "cero";
    if (n < 10) return UNIDADES[n];
    if (n < 100) return DECENAS[n/10] + (n%10 ? " y " + UNIDADES[n%10] : "");
    if (n < 1000) return UNIDADES[n/100] + "cientos " + literal(n%100);
    if (n < 2000) return "mil " + literal(n%1000);
    return "numero grande";
}

int main() {
    double r;
    cout << "Ingrese un monto en Bs: ";
    cin >> r;
    int ent = (int)r;
    int dec = (r - ent) * 100;
    cout << "Literal: " << literal(ent) << " " << dec << "/100 bolivianos" << endl;
    return 0;
}



