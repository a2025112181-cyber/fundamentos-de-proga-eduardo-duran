EJERCICIO 9
#include <iostream>
#include <cmath>
using namespace std;

int BINARIO_A_DECIMAL(long long bin) {
    int dec = 0, i = 0;
    while (bin > 0) {
        int dig = bin % 10;
        dec += dig * pow(2, i);
        bin /= 10;
        i++;
    }
    return dec;
}

int main() {
    long long bin;
    cout << "Ingrese un numero binario: ";
    cin >> bin;
    cout << "Decimal: " << BINARIO_A_DECIMAL(bin) << endl;
    return 0;
}

